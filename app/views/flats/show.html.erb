<h2> <%= @flat.name %> </h2>
<p> <%= @flat.address %> </p>
<p> <%= @flat.description %> </p>
<p> <%= @flat.price_per_night %> </p>
<p> <%= @flat.number_of_guests %> </p>

<h2> List Booking </h2>
<ul>
    <% @flat.bookings.each do |booking| %>
      <li> <%= link_to booking.name, flat_booking_path(booking.flat_id, booking.id) %> </li>
    <% end %>
</ul>

<%= link_to "Create Booking", new_flat_booking_path(@flat) %>

<%= link_to "Delete that Flat", flat_path(@flat), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>

<%= link_to "Edit", edit_flat_path %>
<%= link_to "Back", flats_path %>